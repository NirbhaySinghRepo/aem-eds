{
  "definitions": [
    {
      "title": "GB008-Tabs",
      "id": "tab",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "tab",
              "model": "tab",
              "filter": "tab"
            }
          }
        }
      }
    },
    {
      "title": "Tab Content",
      "id": "tabContent",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "tabContent",
              "model": "tabContent",
              "filter": "tabContent"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "tab",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "mainTabTitle",
          "label": "Title",
          "value": ""
        }
      ]
    },
    {
      "id": "tabContent",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "tabName",
          "label": "Tab Name",
          "multi": false
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "image",
          "label": "Image (Aspect ratio 16:9)",
          "multi": false
        },
        {
          "component": "select",
          "label": "Variation Type",
          "name": "selectTabType",
          "valueType": "string",
          "description": "Select Variation 1 for displaying Heading & Description, and select Variation 2 for displaying Features",
          "options": [
            { "name": "Variation 1", "value": "var1" },
            { "name": "Variation 2", "value": "var2" }
          ]
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "heading",
          "label": "Heading",
          "value": "",
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "richtext",
          "name": "description",
          "label": "Description",
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "reference",
          "valueType": "string",
          "name": "imageMobile",
          "label": "Image for Mobile (Aspect ratio 1:1)",
          "multi": false,
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "aem-content",
          "valueType": "string",
          "name": "ctaTabLink",
          "label": "CTA Link",
          "value": "",
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "ctaTabText",
          "label": "CTA Text",
          "value": "",
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "select",
          "name": "ctaTabType",
          "label": "CTA Type",
          "options": [
            { "name": "default", "value": "" },
            { "name": "primary", "value": "primary" },
            { "name": "secondary", "value": "secondary" },
            { "name": "tertiary", "value": "tertiary" }
          ],
          "condition": { "==": [{ "var": "selectTabType" }, "var1"] }
        },
        {
          "component": "text",
          "name": "usp",
          "key-value": true,
          "value": "",
          "label": "USP",
          "valueType": "string",
          "description": "Add USP and USP-Value as key-value pair",
          "multi": true,
          "condition": { "==": [{ "var": "selectTabType" }, "var2"] }
        },
        {
          "component": "text",
          "name": "uspValue",
          "key-value": true,
          "value": "",
          "label": "USP Value",
          "description": "Add USP and USP-Value as key-value pair",
          "valueType": "string",
          "multi": true,
          "condition": { "==": [{ "var": "selectTabType" }, "var2"] }
        },
        {
          "component": "tab",
          "name": "uspContainer",
          "label": "USP and USP Value",
          "condition": {
            "==": [{ "var": "selectTabType" }, "var2"]
          },
          "multi": true,
          "fields": [
            {
              "component": "text-input",
              "name": "usp1",
              "key-value": true,
              "value": "",
              "label": "USP 1",
              "valueType": "string",
              "description": "Add USP as a key-value pair"
            },
            {
              "component": "text-input",
              "name": "uspValue1",
              "key-value": true,
              "value": "",
              "label": "USP Value 1",
              "description": "Add USP-Value as a key-value pair"
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "tab",
      "components": ["tabContent"]
    }
  ]
}
